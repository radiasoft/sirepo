            testy = split.test_gen.outScaler.inverse_transform(
                numpy.array(testy).reshape(-1, split.test_gen.y_channels)
            )
        )
    return PKDict(
        p=model.predict(testx),
        testy=_test_y(testy),
    )

def _test_y(testy):
    if split.test_gen.outScaler:
        testy = split.test_gen.outScaler.inverse_transform(
            numpy.array(testy).reshape(-1, split.test_gen.y_channels)
        )
    if {{ imageToImage }}:
        testy = numpy.array(testy).flatten()
    return testy

