{
    "type": {
        "CoupledSimType": {
            "base": "Enum",
            "config": {
                "allowedValues": [
                    ["", "Select Simulation Type"],
                    ["elegant", "elegant"],
                    ["opal", "OPAL"],
                    ["genesis", "GENESIS 1.3"]
                ],
                "isRequired": false
            }
        },
        "SimArray": {
            "base": "SimArray",
            "config": {
                "isRequired": false
            }
        },
        "SimListEnum": {
            "base": "SimListEnum",
            "config": {
                "isRequired": false
            }
        }
    },
    "model": {
        "coupledSim": {
            "simulationType": {
                "displayName": "Simulation Type",
                "type": "CoupledSimType"
            },
            "simulationId": {
                "displayName": "Simulation ID",
                "type": "OptionalString"
            }
        },
        "simWorkflow": {
            "coupledSims": {
                "displayName": "Simulations",
                "type": "SimArray",
                "defaultValue": []
            },
            "simType_1": {
                "displayName": "1: Simulation Type",
                "type": "CoupledSimType"
            },
            "simId_1": {
                "displayName": "Simulation",
                "type": "SimListEnum"
            },
            "simType_2": {
                "displayName": "2: Simulation Type",
                "type": "CoupledSimType",
                "shown": "$(simWorkflow.simType_1) && $(simWorkflow.simId_1) ? true : false"
            },
            "simId_2": {
                "displayName": "Simulation",
                "type": "SimListEnum",
                "shown": "$(simWorkflow.simType_1) && $(simWorkflow.simId_1) ? true : false"
            },
            "simType_3": {
                "displayName": "3: Simulation Type",
                "type": "CoupledSimType",
                "shown": "$(simWorkflow.simType_2) && $(simWorkflow.simId_2) ? true : false"
            },
            "simId_3": {
                "displayName": "Simulation",
                "type": "SimListEnum",
                "shown": "$(simWorkflow.simType_2) && $(simWorkflow.simId_2) ? true : false"
            },
            "simType_4": {
                "displayName": "4: Simulation Type",
                "type": "CoupledSimType",
                "shown": "$(simWorkflow.simType_3) && $(simWorkflow.simId_3) ? true : false"
            },
            "simId_4": {
                "displayName": "Simulation",
                "type": "SimListEnum",
                "shown": "$(simWorkflow.simType_3) && $(simWorkflow.simId_3) ? true : false"
            }
        },
        "sim1Animation": {
            "histogramBins": {
                "displayName": "Histogram Bins",
                "type": "Integer"
            }
        },
        "sim2Animation": {
            "histogramBins": {
                "displayName": "Histogram Bins",
                "type": "Integer"
            }
        },
        "sim3Animation": {
            "histogramBins": {
                "displayName": "Histogram Bins",
                "type": "Integer"
            }
        },
        "sim4Animation": {
            "histogramBins": {
                "displayName": "Histogram Bins",
                "type": "Integer"
            }
        },
        "simulationStatus": {}
    },
    "view": [
        {
            "layout": "navbarModalButton",
            "config": {
                "name": "simulationRenameNavButton",
                "title": "$(simulation.name)",
                "icon": "faPencil",
                "modal": {
                    "title": "Simulation",
                    "items": [
                        {
                            "layout": "fieldList",
                            "config": { "name": "simulation", "fields": ["simulation.name"] }
                        }
                    ]
                }
            }
        },
        {
            "layout": "navTabs",
            "config": {
                "name": "navtabs",
                "tabs": [
                    {
                        "name": "source",
                        "title": "Source",
                        "icon": "",
                        "items": [
                            {
                                "layout": "waterfall",
                                "config": {
                                    "breakpoints": {
                                        "sm": 1,
                                        "md": 2,
                                        "xl": 3
                                    },
                                    "gutters": {
                                        "horizontal": ".5em",
                                        "vertical": ".5em"
                                    },
                                    "items": [
                                        {
                                            "layout": "panel",
                                            "config": {
                                                "name": "simWorkflow",
                                                "title": "Simulation Workflow",
                                                "basic": [
                                                    {
                                                        "layout": "fieldList",
                                                        "config": {
                                                            "fields": [
                                                                "simWorkflow.simType_1",
                                                                "simWorkflow.simId_1",
                                                                "simWorkflow.simType_2",
                                                                "simWorkflow.simId_2",
                                                                "simWorkflow.simType_3",
                                                                "simWorkflow.simId_3",
                                                                "simWorkflow.simType_4",
                                                                "simWorkflow.simId_4"
                                                            ]
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "layout": "panel",
                                            "config": {
                                                "name": "simulationStatus",
                                                "title": "Simulation Status",
                                                "basic": [
                                                    {
                                                        "layout": "startSimulation",
                                                        "config": { "reportGroupName": "animation" }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "layout": "panel",
                                            "config": {
                                                "name": "sim1Animation",
                                                "title": "Simulation 1 Phase Space",
                                                "basic": [
                                                    {
                                                        "layout": "manualRunReport",
                                                        "config": {
                                                            "reportGroupName": "animation",
                                                            "reportName": "sim1Animation",
                                                            "frameIdFields": [
                                                                "sim1Animation.histogramBins"
                                                            ],
                                                            "frameIdFields": [
                                                                "sim1Animation.histogramBins"
                                                            ],
                                                            "reportLayout": { "layout": "heatplot", "config": {} }
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "layout": "panel",
                                            "config": {
                                                "name": "sim2Animation",
                                                "title": "Simulation 2 Phase Space",
                                                "basic": [
                                                    {
                                                        "layout": "manualRunReport",
                                                        "config": {
                                                            "reportGroupName": "animation",
                                                            "reportName": "sim2Animation",
                                                            "frameIdFields": [
                                                                "sim2Animation.histogramBins"
                                                            ],
                                                            "frameIdFields": [
                                                                "sim2Animation.histogramBins"
                                                            ],
                                                            "reportLayout": { "layout": "heatplot", "config": {} }
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "layout": "panel",
                                            "config": {
                                                "name": "sim3Animation",
                                                "title": "Simulation 3 Phase Space",
                                                "basic": [
                                                    {
                                                        "layout": "manualRunReport",
                                                        "config": {
                                                            "reportGroupName": "animation",
                                                            "reportName": "sim3Animation",
                                                            "frameIdFields": [
                                                                "sim3Animation.histogramBins"
                                                            ],
                                                            "frameIdFields": [
                                                                "sim3Animation.histogramBins"
                                                            ],
                                                            "reportLayout": { "layout": "heatplot", "config": {} }
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "layout": "panel",
                                            "config": {
                                                "name": "sim4Animation",
                                                "title": "Simulation 4 Phase Space",
                                                "basic": [
                                                    {
                                                        "layout": "manualRunReport",
                                                        "config": {
                                                            "reportGroupName": "animation",
                                                            "reportName": "sim4Animation",
                                                            "frameIdFields": [
                                                                "sim4Animation.histogramBins"
                                                            ],
                                                            "frameIdFields": [
                                                                "sim4Animation.histogramBins"
                                                            ],
                                                            "reportLayout": { "layout": "heatplot", "config": {} }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
