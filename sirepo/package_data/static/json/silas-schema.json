        "crystal3dAnimation": {},
        "laserPulse": {
            "chirp": ["Chirp [eV]", "Float", 0, "Energy variation from first to last slice in laser pulse"],
            "ccd": ["CCD", "InputFile", ""],
            "meta": ["Meta", "InputFile", ""],
            "wfs": ["WaveFronts", "InputFile", ""],
            "mx": ["Horizontal Gauss-Hermite Mode Order", "Integer", 0],
            "my": ["Vertical Gauss-Hermite Mode Order", "Integer", 0],
            "num_sig_long": ["Longitudinal Number of Gaussian Sigmas", "Integer", 3],
            "num_sig_trans": ["Transverse Number of Gaussian Sigmas", "Integer", 6],
            "nx_slice": ["Horizontal Number of Mesh Points in Slice", "Integer", 500, "", 1],
            "ny_slice": ["Vertical Number of Mesh Points in Slice", "Integer", 500, "", 1],
            "nslice": ["Number of Slices", "Integer", 3, "", 1],
