            "focusingError": ["Focusing Error [m]", "Float", 0]
        },
        "plotAnimation": {},
        "plot2Animation": {},
        "simulation": {
            "distanceFromSource": ["", "Float", 0.0 , "", 0.0]
        },
        "watch": {
            "_super": ["_", "model", "beamElement"],
            "title": ["Element Name", "SafePath", "Watchpoint"]
        },
        "watchpointReport": {
            "_super": ["_", "model", "initialIntensityReport"]
        }
    },
