{
    "appModes": {
        "default": {
            "localRoute": "source"
        }
    },
    "enum": {
        "DataType": [
            ["intensity", "Intensity"],
            ["phase", "Phase"]
        ],
        "DistributionType": [
            ["gaussian", "Gaussian"],
            ["file", "From Files"]
        ],
        "GaussianBeamPolarization": [
            ["1", "Linear Horizontal"]
        ],
        "PropagationType": [
            ["abcd_lct", "ABCD LCT"],
            ["attenuate", "Attenuate"],
            ["default", "Default"],
            ["gain_calc", "Gain Calculation"],
            ["n0n2_srw", "N0N2 SRW"],
            ["n0n2_lct", "N0N2 LCT"]
        ]
    },
    "dynamicFiles": {
        "externalLibs": {
            "js": [
                "dom-to-image.min.js",
                "vtk.js"
            ]
        },
        "sirepoLibs": {
            "js": [
                "silas.js",
                "sirepo-beamline.js"
            ],
            "css": [
                "srw.css",
                "silas.css",
                "vtk.css"
            ]
        }
    },
    "localRoutes": {
        "source": {
            "route": "/source/:simulationId",
            "config": {
                "controller": "SourceController as source",
                "templateUrl": "/static/html/silas-source.html"
            }
        },
        "beamline": {
            "route": "/beamline/:simulationId",
            "config": {
                "controller": "BeamlineController as beamline",
                "templateUrl": "/static/html/silas-beamline.html"
            }
        },
        "thermal-transport": {
            "route": "/thermal-transport/:simulationId",
            "config": {
                "controller": "CrystalController as crystal",
                "templateUrl": "/static/html/silas-thermal-transport.html"
            }
        }
    },
    "frameIdFields": {
        "crystalAnimation": [],
        "crystal3dAnimation": [],
        "plotAnimation": [],
        "plot2Animation": []
    },
    "model": {
        "beamElement": {
            "position": ["Central Position [m]", "Float", 0.0],
            "propagationType": ["Propagation Type", "PropagationType", "default"]
        },
        "crystal": {
            "_super": ["_", "model", "beamElement"],
            "icon": ["", "String", "ti-sapphire-crystal.png"],
            "nslice": ["Number of Slices", "Integer", 1, "", 1],
            "position": ["Central Position [m]", "Float", 4.0],
            "propagationType": ["Propagation Type", "PropagationType", "n0n2_srw"],
            "n0": ["Index of Refraction ($n_0$)", "Float", 1.75, "On axis index of refraction", 1e-24],
            "n2": ["Thermal Lensing ($n_2$)", "Float", 4, "Quadratic variations of index of refraction, with $n(r) = n_0 - \\frac{n_2 r^2} 2  [\\frac 1 {m^2}]$", 0.0],
            "title": ["Element Name", "String", "Crystal"],
            "length": ["Length [cm]", "Float", 2],
            "l_scale": ["Length Scale Factor for LCT Propagation", "Float", 1],
            "radial_n2": ["Include Transverse Variation", "Boolean", "0"],
            "calc_gain": ["Include Gain Calculations", "Boolean", "0"],
            "inversion_n_cells": ["Inversion Mesh Cell Count", "Integer", 64],
            "inversion_mesh_extent": ["Inversion Mesh Extent [m]", "Float", 0.01],
            "crystal_alpha": ["Crystal Alpha [1/m]", "Float", 120.0],
            "pump_waist": ["Pump Waist [m]", "Float", 0.00164],
            "pump_wavelength": ["Pump Wavelength [m]", "Float", 532.0e-9],
            "pump_energy": ["Pump Energy [J]", "Float", 0.0211, "Pump laser energy onto the crystal"]
        },
        "crystalAnimation": {},
        "crystalSettings": {
            "meshDensity": ["Mesh Density", "Integer", 30, "", 10, 50],
            "time": ["Simulation Time [sec]", "Float", 1, "", 1e-24],
            "steps": ["Number of Time Steps", "Integer", 100, "", 1],
            "plotInterval": ["Number of Intervals Between Records", "Integer", 10, "", 1],
            "tolerance": ["Boundary Tolerance", "Float", 8e-3, "Adjust this value to avoid points outside domain (for a coarse mesh, increase this value)"]
        },
        "crystalCylinder": {
            "diameter": ["Diameter [cm]", "Float", 7, "", 1e-24],
            "crystal": ["Crystal in Beamline", "SelectCrystal", "0"],
            "crystalLength": ["Length [cm]", "Float", 2],
            "diffusionConstant": ["Diffusion Constant [$\\bf cm^2/s$]", "Float", 5.65e-2],
            "T0": ["$\\Large T_0$ [$\\bf \\degree C$]", "Float", 20],
            "dT": ["$\\Large \\delta_T$ [$\\bf\\degree C$]", "Float", 3.8],
            "wdT": ["$\\Large \\xi$ [cm]", "Float", 1],
            "supergaussian": ["$\\Large P$", "Integer", 8, "Supergaussian degree", 1, 12]
        },
        "crystal3dAnimation": {},
        "laserPulse": {
            "chirp": ["Chirp [eV]", "Float", 0, "Energy variation from first to last slice in laser pulse"],
            "ccd": ["Intensity", "InputFile", ""],
            "meta": ["WFS Space Data", "InputFile", "", "A file describing the pixel dimensions of your wavefront sensor. Pixel dimensions are assumed to be in microns."],
            "wfs": ["Phase", "InputFile", ""],
            "num_sig_long": ["Number of Gaussian Sigmas", "Integer", 3],
            "num_sig_trans": ["Number of Gaussian Sigmas", "Integer", 6],
            "nx_slice": ["Horizontal Number of Mesh Points in Slice", "Integer", 64, "", 1],
            "ny_slice": ["Vertical Number of Mesh Points in Slice", "Integer", 64, "", 1],
            "nslice": ["Number of Slices", "Integer", 3, "", 1],
            "photon_e_ev": ["Photon energy [eV]", "Float", 1.5],
            "poltype": ["Polarization", "GaussianBeamPolarization", "1"],
            "tau_fwhm": ["FWHM Length [s]", "Float", 2.35865e-11],
            "pulseE": ["Total Laser Pulse Energy [J]", "Float", 0.001],
            "distribution": ["Distribution Type", "DistributionType", "gaussian"],
            "sigx_waist": ["Horizontal RMS Waist Size [m]", "Float", 0.001],
            "sigy_waist": ["Vertical RMS Waist Size [m]", "Float", 0.001]
        },
        "initialIntensityReport": {
            "dataType": ["Value to Plot", "DataType", "intensity"],
            "colorMap": ["Color Map", "ColorMap", "viridis"],
            "sliceNumber": ["Slice Number", "SliceNumber", 0]
        },
        "initialPhaseReport": {
            "colorMap": ["Color Map", "ColorMap", "viridis"],
            "sliceNumber": ["Slice Number", "SliceNumber", 0]
        },
        "lens": {
            "_super": ["_", "model", "beamElement"],
            "focalLength": ["Focal Length [m]", "Float", 2.0],
            "title": ["Element Name", "String", "Lens"]
        },
        "mirror": {
            "title": ["Element Name", "String", "Planar Mirror"],
            "position": ["Central Position [m]", "Float"],
            "focusingError": ["Focusing Error [m]", "Float", 0]
        },
        "plotAnimation": {},
        "plot2Animation": {},
        "simulation": {
            "distanceFromSource": ["", "Float", 0.0 , "", 0.0]
        },
        "watch": {
            "_super": ["_", "model", "beamElement"],
            "title": ["Element Name", "SafePath", "Watchpoint"]
        },
        "watchpointReport": {
            "_super": ["_", "model", "initialIntensityReport"]
        }
    },
