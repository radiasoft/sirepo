{
    "appModes": {
        "default": {
            "localRoute": "source"
        }
    },
    "enum": {
        "DataType": [
            ["intensity", "Intensity"],
            ["phase", "Phase"]
        ],
        "DistributionType": [
            ["gaussian", "Gaussian"],
            ["file", "From Files"]
        ],
        "GaussianBeamPolarization": [
            ["1", "Linear Horizontal"],
            ["2", "Linear Vertical"],
            ["3", "Linear 45 degrees"],
            ["4", "Linear 135 degrees"],
            ["5", "Circular Right"],
            ["6", "Circular Left"]
        ],
        "PropagationType": [
            ["abcd_lct", "ABCD"],
            ["attenuate", "Attenuate"],
            ["default", "Default"],
            ["gain_calc", "Gain Calculation"],
            ["n0n2_srw", "N0N2 SRW"],
            ["n0n2_lct", "N0N2 LCT"]
        ]
    },
    "dynamicFiles": {
        "externalLibs": {
            "js": [
                "dom-to-image.min.js",
                "vtk.js"
            ]
        },
        "sirepoLibs": {
            "js": [
                "silas.js",
                "sirepo-beamline.js"
            ],
            "css": [
                "srw.css",
                "silas.css",
                "vtk.css"
            ]
        }
    },
    "localRoutes": {
        "source": {
            "route": "/source/:simulationId",
            "config": {
                "controller": "SourceController as source",
                "templateUrl": "/static/html/silas-source.html"
            }
        },
        "beamline": {
            "route": "/beamline/:simulationId",
            "config": {
                "controller": "BeamlineController as beamline",
                "templateUrl": "/static/html/silas-beamline.html"
            }
        },
        "crystal": {
            "route": "/crystal/:simulationId",
            "config": {
                "controller": "CrystalController as crystal",
                "templateUrl": "/static/html/silas-crystal.html"
            }
        }
    },
    "frameIdFields": {
        "crystalAnimation": [],
        "crystal3dAnimation": [],
        "plotAnimation": [],
        "plot2Animation": []
    },
    "model": {
        "beamElement": {
            "position": ["Central Position [m]", "Float", 0.0],
            "propagationType": ["Propagation Type", "PropagationType", "default"]
        },
        "crystal": {
            "_super": ["_", "model", "beamElement"],
            "diameter": ["Diameter [cm]", "Float", 7, "", 1e-24],
            "diffusionConstant": ["Diffusion Constant [$\\bf cm^2/s$]", "Float", 5.65e-2],
            "icon": ["", "String", "ti-sapphire-crystal.png"],
            "numSlices": ["Number of Slices", "Integer", 1, "", 1],
            "position": ["Central Position [m]", "Float", 4.0],
            "propagationType": ["Propagation Type", "PropagationType", "n0n2_srw"],
            "radialVariation": ["Transverse Variation", "Float", 4, "Transverse variation of index of refraction", 0.0],
            "refractionIndex": ["Index of Refraction", "Float", 1.75, "Index of refraction along the optical axis", 1e-24],
            "title": ["Element Name", "String", "Crystal"],
            "width": ["Width [cm]", "Float", 2]
        },
        "crystalAnimation": {},
        "crystalSettings": {
            "meshDensity": ["Mesh Density", "Integer", 30, "", 10, 50],
            "time": ["Simulation Time [sec]", "Float", 1, "", 1e-24],
            "steps": ["Number of Time Steps", "Integer", 100, "", 1],
            "plotInterval": ["Number of Intervals Between Records", "Integer", 10, "", 1],
            "tolerance": ["Boundary Tolerance", "Float", 8e-3, "Adjust this value to avoid points outside domain (for a coarse mesh, increase this value)"]
        },
        "crystalCylinder": {
            "diameter": ["Diameter [cm]", "Float", 7, "", 1e-24],
            "crystal": ["Crystal in Beamline", "SelectCrystal", "0"],
            "crystalWidth": ["Width [cm]", "Float", 2],
