{
    "appModes": {
        "default": {
            "localRoute": "dataSource"
        }
    },
    "dynamicFiles": {
        "sirepoLibs": {
            "css": [
                "raydata.css"
            ],
            "js": [
                "raydata.js"
            ]
        }
    },
    "enum": {
        "CatalogName": [
            ["chx", "chx"],
            ["csx", "csx"]
        ]
    },
    "frameIdFields": {
        "animation": []
    },
    "localRoutes": {
        "analysis": {
            "route": "/analysis/:simulationId",
            "config": {
                "controller": "AnalysisController as analysis",
                "templateUrl": "/static/html/raydata-analysis.html"
          }
        },
        "dataSource": {
            "route": "/data-source/:simulationId",
            "config": {
                "controller": "DataSourceController as dataSource",
                "templateUrl": "/static/html/raydata-data-source.html"
          }
        }
    },
    "model": {
        "analysisStatus": {
            "notes": ["Notes", "Text", ""]
        },
        "inputFiles": {
            "mask": ["Mask ZIP", "InputFile"]
        },
        "pollBlueskyForScansAnimation": {
            "minutes": ["Poll duration [min]", "Integer", 1, "Number of minutes to poll for new scans", 1, 1440]
        },
        "scans": {
            "searchStartTime": ["Start", "DateTimePicker", null],
	    "searchStopTime": ["Stop", "DateTimePicker", null],
            "catalogName": ["Catalog Name", "CatalogName", ""]
        },
        "selectedScans": {
	    "uids": ["", "SelectedScansTable", null]
        },
        "simulationStatus": {
            "notes": ["Notes", "Text", ""]
        }
    },
    "strings": {
        "completionState": "",
        "simulationDataType": "notebook",
        "simulationDataTypePlural": "notebooks",
        "typeOfSimulation": "poll"
    },
    "view": {
        "analysisStatus": {
            "title": "Analysis Status",
            "advanced": [
                "notes"
            ]
        },
        "inputFiles": {
            "title": "Input Files",
            "basic": [
                "mask"
            ],
            "advanced": []
        },
        "scans": {
            "title": "Scans",
            "basic": [
                "catalogName",
                "searchStartTime",
                "searchStopTime",
                "selectedScans.uids"
            ],
            "advanced": []
        },
        "simulationStatus": {
            "title": "Poll For New Scans",
            "advanced": [
                "notes"
            ],
            "basic": [
                "pollBlueskyForScansAnimation.minutes"
            ]
        }
    }
}
