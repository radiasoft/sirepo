{
    "appModes": {
        "default": {
            "localRoute": "analysisCompleted"
        }
    },
    "dynamicFiles": {
        "sirepoLibs": {
            "css": [
                "raydata.css"
            ],
            "js": [
                "raydata.js"
            ]
        }
    },
    "enum": {},
    "frameIdFields": {
        "animation": []
    },
    "localRoutes": {
        "analysisQueue": {
            "route": "/analysis-queue/:simulationId",
            "config": {
                "controller": "AnalysisQueueController as analysisQueue",
                "templateUrl": "/static/html/raydata-analysis-queue.html"
          }
        },
        "analysisCompleted": {
            "route": "/analysis-completed/:simulationId",
            "config": {
                "controller": "AnalysisCompletedController as analysisCompleted",
                "templateUrl": "/static/html/raydata-analysis-completed.html"
          }
        },
        "replay": {
            "route": "/replay/:simulationId",
            "config": {
                "controller": "ReplayController as replay",
                "templateUrl": "/static/html/raydata-replay.html"
          }
        }
    },
    "model": {
        "inputFiles": {
            "mask": ["Mask ZIP", "InputFile"]
        },
        "pollBlueskyForScansAnimation": {
            "minutes": ["Poll duration [min]", "Integer", 1, "Number of minutes to poll for new scans", 1, 1440]
        },
        "catalog": {
            "catalogName": ["Catalog Name", "CatalogName", ""]
        },
        "completedScans": {
            "searchStartTime":["Start", "DateTimePicker", null],
            "searchStopTime":["Stop", "DateTimePicker", null],
            "scans": ["", "CompletedScansTable", ""]
        },
        "queuedScans": {
            "scans": ["", "QueuedScansTable", ""]
        },
        "replay": {
            "sourceCatalog": ["Source Catalog", "CatalogName", ""],
            "destinationCatalog": ["Destination Catalog", "CatalogName", ""],
            "numScans": ["Number of Scans", "Integer", null]
        },
        "simulationStatus": {
            "notes": ["Notes", "Text", ""]
        }
    },
    "strings": {
        "completionState": "",
        "simulationDataType": "notebook",
        "simulationDataTypePlural": "notebooks",
        "typeOfSimulation": "poll"
    },
    "view": {
        "analysisQueue": {
            "title": "Analysis Queue",
            "basic": [
                "catalog.catalogName",
                "queuedScans.scans"
            ],
            "advanced": []
        },
        "inputFiles": {
            "title": "Input Files",
            "basic": [
                "mask"
            ],
            "advanced": []
        },
        "completedScans": {
            "title": "Completed Scans",
            "basic": [
                "catalog.catalogName",
                "searchStartTime",
                "searchStopTime",
                "scans"
            ],
            "advanced": []
        },
        "replay": {
            "title": "Replay",
            "advanced": [
